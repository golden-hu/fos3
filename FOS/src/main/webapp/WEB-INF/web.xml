<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/applicationContext.xml</param-value>
  </context-param>
  <context-param>
    <param-name>appConfigLocation</param-name>
    <param-value>/WEB-INF/fos.properties</param-value>
  </context-param>
  <context-param>
    <param-name>xmlFile</param-name>
    <param-value>WEB-INF/classes/proxool.xml</param-value>
  </context-param>
  <servlet>
    <description>FOS main servlet</description>
    <display-name>FOS</display-name>
    <servlet-name>MainServlet</servlet-name>
    <servlet-class>haitai.fw.platform.MainServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainServlet</servlet-name>
    <url-pattern>/MainServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>haitai.fw.util.ProxoolListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <session-config>
    <session-timeout>600</session-timeout>
  </session-config>
</web-app>