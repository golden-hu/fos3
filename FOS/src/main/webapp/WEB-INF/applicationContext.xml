<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/tx 
	http://www.springframework.org/schema/tx/spring-tx-3.0.xsd 
	http://www.springframework.org/schema/aop 
	http://www.springframework.org/schema/aop/spring-aop-3.0.xsd 
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">


	<bean id="entityManagerFactory"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
		<property name="persistenceUnitName" value="FOSPU" />
		<property name="dataSource" ref="dataSource"></property>
	</bean>
	<bean id="transactionManager"
		class="org.springframework.orm.jpa.JpaTransactionManager">
		<property name="entityManagerFactory"
			ref="entityManagerFactory" />
	</bean>
	<bean id="messageSource"
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>classpath:exception</value>
			</list>
		</property>
	</bean>
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName">
			<value>org.logicalcobwebs.proxool.ProxoolDriver</value>
		</property>
		<property name="url">
			<value>proxool.fosdb</value>
		</property>
	</bean>
	<tx:annotation-driven transaction-manager="transactionManager"></tx:annotation-driven>
	<context:annotation-config />
	<context:component-scan base-package="haitai" />
	<aop:aspectj-autoproxy></aop:aspectj-autoproxy>
	<bean id="serviceAspect" class="haitai.fw.aop.ServiceAspect"></bean>
	<bean id="daoAspect" class="haitai.fw.aop.DaoAspect"></bean>
	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location">
			<value>WEB-INF/fos.properties</value>
		</property>
	</bean>
	<bean id="mailSender"
		class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host"><value>${mail.host}</value></property>
		<property name="port"><value>${mail.port}</value></property>
		<property name="javaMailProperties">
			<props>
				<prop key="mail.stmp.auth">true</prop>
				<prop key="mail.stmp.timeout">25000</prop>
			</props>
		</property>
		<property name="username"><value>${mail.username}</value></property>
		<property name="password"><value>${mail.password}</value></property>
	</bean>
	<bean id="mailManager" class="haitai.fw.message.MailManager">
		<property name="sender" ref="mailSender"></property>
	</bean>
	<bean id="jobSendMessage"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="PMessageService"></property>
		<property name="targetMethod" value="send"></property>
		<property name="concurrent" value="false"></property>
	</bean>
	<bean id="jobClearOnlineUser"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="PUserService"></property>
		<property name="targetMethod" value="clearTimeoutUsers"></property>
		<property name="concurrent" value="false"></property>
	</bean>
	<bean id="jobDocReleasable"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="FDocService"></property>
		<property name="targetMethod" value="updateReleasableFlag"></property>
		<property name="concurrent" value="false"></property>
	</bean>
	<bean id="jobConsignStatusLock"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="FConsignService"></property>
		<property name="targetMethod" value="autoUpdateStatusLock"></property>
		<property name="concurrent" value="false"></property>
	</bean>
	<bean id="jobDocWriteOffAlert"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="ffopScheduleService"></property>
		<property name="targetMethod" value="alertWriteOffDoc"></property>
		<property name="concurrent" value="false"></property>
	</bean>
	<bean id="jobSalesOverdueAlert"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="ffopScheduleService"></property>
		<property name="targetMethod" value="alertSalesOverdue"></property>
		<property name="concurrent" value="false"></property>
	</bean>
	<bean id="triggerSendMessage"
		class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<property name="jobDetail" ref="jobSendMessage"></property>
		<property name="startDelay" value="10000"></property>
		<property name="repeatInterval" value="300000"></property>
	</bean>
	<bean id="triggerClearOnlineUser"
		class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<property name="jobDetail" ref="jobClearOnlineUser"></property>
		<property name="startDelay" value="15000"></property>
		<property name="repeatInterval" value="300000"></property>
	</bean>
	<bean id="triggerDocReleasable"
		class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="jobDocReleasable"></property>
		<property name="cronExpression" value="0 30 23 * * ?"></property>
	</bean>
	<bean id="triggerConsignStatusLock"
		class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="jobConsignStatusLock"></property>
		<property name="cronExpression" value="0 30 2 * * ?"></property>
	</bean>
	<bean id="triggerDocWriteOffAlert"
		class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="jobDocWriteOffAlert"></property>
		<property name="cronExpression" value="0 40 2 * * ?"></property>
	</bean>
 	<bean id="triggerSalesOverdueAlert"
		class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="jobSalesOverdueAlert"></property>
		<property name="cronExpression" value="0 45 2 * * ?"></property>
	</bean>
 	<bean id="scheduler"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="triggerSendMessage"></ref>
				<ref bean="triggerClearOnlineUser"></ref>
				<ref bean="triggerDocReleasable"></ref>
				<ref bean="triggerConsignStatusLock"></ref>
				<ref bean="triggerDocWriteOffAlert"></ref>
				<ref bean="triggerSalesOverdueAlert"></ref>
			</list>
		</property>
	</bean>
	<bean id="MappingConverterUtil"
		class="haitai.fw.util.MappingConverterUtil">
	</bean>
	<bean id="ActionLogUtil"
		class="haitai.fw.util.ActionLogUtil">
	</bean>
	<bean id="SpringContextUtil" 
		class="haitai.fw.util.SpringContextUtil">
	</bean>
</beans>